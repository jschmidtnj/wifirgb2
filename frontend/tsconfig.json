{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true
  },
  "include": ["src", "./src/**/*"],
  "exclude": ["node_modules", "public", ".cache", "gatsby"]
}
